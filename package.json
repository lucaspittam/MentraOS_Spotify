{
  "name": "mentraos-media-controller",
  "version": "1.0.0",
  "description": "MentraOS app for general media control on smart glasses with companion mobile app",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=packages/app",
    "start": "npm start --workspace=packages/app", 
    "render-start": "npm run build --workspace=packages/app && npm start --workspace=packages/app",
    "install-all": "npm install && npm install --workspace=packages/app"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  }
}
